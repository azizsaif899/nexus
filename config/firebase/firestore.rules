rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default rule: deny all access (secure by default)
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Users collection - authenticated users only
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public collections for development (to be restricted later)
    match /queries/{document=**} {
      allow read, write: if true; // TODO: Add proper authentication
    }
    
    match /agents/{document=**} {
      allow read, write: if true; // TODO: Add proper authentication
    }
  }
}