# Production Environment Variables
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/azizsys_prod
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=${JWT_SECRET}
MASTER_KEY=${MASTER_KEY}
SESSION_SECRET=${SESSION_SECRET}

# API Keys (Encrypted)
ENCRYPTED_GEMINI_API_KEY=${ENCRYPTED_GEMINI_API_KEY}
ENCRYPTED_WHATSAPP_TOKEN=${ENCRYPTED_WHATSAPP_TOKEN}
ENCRYPTED_OPENAI_API_KEY=${ENCRYPTED_OPENAI_API_KEY}

# CORS
ALLOWED_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Monitoring
LOG_LEVEL=info
ENABLE_AUDIT_LOGGING=true
SECURITY_MONITORING=true

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000