# Firebase Configuration - Copy this file to .env and fill with your values
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Google Service Account Configuration
GOOGLE_SERVICE_ACCOUNT_PATH=./config/service-account.json
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_CLIENT_EMAIL=your-service@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# WhatsApp Configuration
WHATSAPP_TOKEN=your_whatsapp_token_here
WHATSAPP_VERIFY_TOKEN=your_verify_token_here

# Database Configuration
DATABASE_URL=your_database_url_here

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Development Settings
NODE_ENV=development
PORT=3000
API_PORT=3333

# Optional: Analytics & Monitoring
ANALYTICS_API_KEY=your_analytics_key_here
MONITORING_API_KEY=your_monitoring_key_here