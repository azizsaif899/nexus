{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node", "react", "react-dom"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/backend/**/*.py",
    "src/frontend/node_modules/**/*"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "!src/backend/**/*",
    "!src/frontend/node_modules/**/*"
  ]
}