<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.g_assistant</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="G-Assistant" string="G-Assistant" data-key="g_assistant_connector">
                    <h2>G-Assistant Integration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="g_assistant_enabled"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="g_assistant_enabled"/>
                                <div class="text-muted">
                                    Enable real-time integration with G-Assistant system
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" attrs="{'invisible': [('g_assistant_enabled', '=', False)]}">
                            <div class="o_setting_right_pane">
                                <label for="g_assistant_webhook_url"/>
                                <field name="g_assistant_webhook_url" placeholder="https://your-domain.com/api/webhook/odoo"/>
                                <label for="g_assistant_secret_key"/>
                                <field name="g_assistant_secret_key" password="True" placeholder="Enter secret key for authentication"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>